{
  "compilerOptions": {
    "lib": [ "DOM", "DOM.Iterable" ],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "removeComments": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "jsxImportSource": "react",
    "plugins": [{ "transform": "./src/jsx.ts" }]
  },
  "include": [ "./src/**/*" ]
}